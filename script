local OpKey = "BPHONG_OP" 
local KeyUnlocked = false
local OpSection = Tabs.Op:AddSection("üîê B·∫£o m·∫≠t VIP")

Tabs.Op:AddInput("Input", {
    Title = "Nh·∫≠p m√£ ƒë·ªÉ m·ªü kh√≥a",
    Default = "",
    Placeholder = "Key: BPHONG_OP",
    Callback = function(Value) _G.InputOpKey = Value end
})

Tabs.Op:AddButton({
    Title = "üîì X√ÅC NH·∫¨N M·ªû KH√ìA",
    Description = "Nh·∫≠p key b√™n tr√™n r·ªìi b·∫•m ƒë·ªÉ hi·ªán script",
    Callback = function()
        if _G.InputOpKey == OpKey then
            if not KeyUnlocked then
                KeyUnlocked = true
                Fluent:Notify({Title = "TH√ÄNH C√îNG", Content = "ƒê√£ hi·ªán script Emote!", Duration = 5})
                
                -- HI·ªÜN SCRIPT EMOTE NGAY B√äN D∆Ø·ªöI
                Tabs.Op:AddSection("üé≠ Emote R15 Section")
                Tabs.Op:AddButton({
                    Title = "Full Emote OP Script",
                    Description = "S·ª≠ d·ª•ng to√†n b·ªô Emote R15",
                    Callback = function()
                        loadstring(game:HttpGet("https://raw.githubusercontent.com/7yd7/Hub/refs/heads/Branch/GUIS/Emotes.lua"))()
                    end
                })
            end
        else
            Fluent:Notify({Title = "TH·∫§T B·∫†I", Content = "Sai Key r·ªìi b·∫°n ∆°i!", Duration = 5})
        end
    end
})

